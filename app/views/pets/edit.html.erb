<h1>Edit Pet</h1>
<%= form_for @pets do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <br />
  <br />
  <br />
  <%= f.label :animal_type %>
  <%= f.text_area :animal_type %>
  <br />
  <br />
  <%= f.label :age %>
  <%= f.text_area :age %>

  <%= f.label :color %>
  <%= f.text_area :color %>

  <%= f.submit %>
<% end %>